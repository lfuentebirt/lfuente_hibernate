<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="demodb">   
        <properties>    
            <!-- Database connection settings -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/demodb" />
            <property name="javax.persistence.jdbc.user" value="demodb" />
            <property name="javax.persistence.jdbc.password" value="demodb" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
       </properties>

    </persistence-unit>

</persistence>